! Misc
XTerm*locale: true
Xterm*saveLines: 8192
xterm*bellIsUrgent: true
! Copy to both PRIMARY & CLIPBOARD
XTerm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

! Colors
XTerm*foreground: rgb:d4/d4/d4
XTerm*background: rgb:12/12/12

! Tango color scheme
xterm*color0: #1e1e1e
xterm*color1: #cc0000
xterm*color2: #4e9a06
xterm*color3: #c4a000
xterm*color4: #3465a4
xterm*color5: #75507b
xterm*color6: #0b939b
xterm*color7: #d3d7cf
xterm*color8: #555753
xterm*color9: #ef2929
xterm*color10: #8ae234
xterm*color11: #fce94f
xterm*color12: #729fcf
xterm*color13: #ad7fa8
xterm*color14: #00f5e9
xterm*color15: #eeeeec

! Fonts
xterm*faceName: Monospace:antialias=true
xterm*faceNameDoublesize: WenQuanYi Zen Hei Mono:antialias=true
xterm*faceSize: 10
